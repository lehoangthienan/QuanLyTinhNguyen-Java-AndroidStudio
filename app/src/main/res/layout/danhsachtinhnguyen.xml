<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="600dp">

    <TextView
        android:id="@+id/txtTenTinhNguyen"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Tên Hoạt Động Tình Nguyện"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txtNgayKT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNgayBD"
        android:layout_below="@+id/txtNgayBD"
        android:hint="Ngày Kết Thúc"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/txtNgayBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTenTinhNguyen"
        android:layout_marginStart="27dp"
        android:layout_marginTop="10dp"
        android:hint="Ngày Bắt Đầu"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/txtSLConLai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtSLThamGia"
        android:layout_below="@+id/txtSLThamGia"
        android:hint="Số Lượng Còn Lại"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/txtSLThamGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNgayKT"
        android:layout_below="@+id/txtNgayKT"
        android:hint="Số Lường Sinh Viên Tham Gia"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/btnDangKyNhanh"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Đăng Kí Nhanh"
        android:textColor="@android:color/holo_red_light"
        android:textSize="10sp"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@+id/txtNgayBD"
        android:layout_alignEnd="@+id/txtTenTinhNguyen" />

    <Button
        android:id="@+id/btnChiTiet"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Chi Tiết"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="8sp"
        android:layout_below="@+id/btnDangKyNhanh"
        android:layout_alignEnd="@+id/btnDangKyNhanh"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_red_dark"
        android:layout_below="@+id/btnChiTiet" />
</RelativeLayout>
